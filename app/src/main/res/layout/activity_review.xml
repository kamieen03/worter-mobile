<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cafe_au_lait">

    <TextView
        android:id="@+id/worter_polish_text"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="30sp"
        android:text="polish text" />

    <View
        android:id="@+id/worter_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/worter_german_text"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="30sp"
        android:text="german text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/wort_easy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:height="60dp"
            android:text="@string/easy"
            android:textColor="@color/black"
            android:backgroundTint="@color/mint_green"
            tools:ignore="ButtonStyle,NestedWeights" />

        <Button
            android:id="@+id/wort_hard_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:height="60dp"
            android:text="@string/hard"
            android:textColor="@color/black"
            android:backgroundTint="@color/cinamon_satin"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</LinearLayout>