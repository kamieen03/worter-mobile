<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Worter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/chinese_red</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Worter.Fullscreen" parent="Theme.Worter">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Worter.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/background </item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>
