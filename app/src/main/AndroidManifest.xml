<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.worter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_eagle"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_eagle_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Worter">
        <activity
            android:name=".MainMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Worter.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReviewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="review"
            android:theme="@style/Theme.Worter.Fullscreen" />
        <activity
            android:name=".ReviewMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="review_menu"
            android:theme="@style/Theme.Worter.Fullscreen" />
        <activity
            android:name=".ShowFailedWordsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="showFailedWords"
            android:theme="@style/Theme.Worter.Fullscreen" />
        <activity
            android:name=".WordListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="allWordsList"
            android:theme="@style/Theme.Worter.Fullscreen" />
        <activity
            android:name=".AllWordsListMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="allWordsListMenu"
            android:theme="@style/Theme.Worter.Fullscreen" />
        <activity
            android:name=".TextsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="review"
            android:theme="@style/Theme.Worter.Fullscreen" />
        <activity
            android:name=".TextsMenuActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="review_menu"
            android:theme="@style/Theme.Worter.Fullscreen" />
    </application>

</manifest>